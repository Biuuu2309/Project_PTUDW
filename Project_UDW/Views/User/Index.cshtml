            upversiontitle_con1: $('#upupversiontitle_con1').val(),
            upversiontitle2: $('#upupversiontitle2').val(),
            upversiontitle_con2: $('#upupversiontitle_con2').val(),
            upversiontitle3: $('#upupversiontitle3').val(),
            upversiontitle_con3: $('#upupversiontitle_con3').val(),
            upversiontitle4: $('#upupversiontitle4').val(),
            upversiontitle_con4: $('#upupversiontitle_con4').val(),
            upversiontitle5: $('#upupversiontitle5').val(),
            upversiontitle_con5: $('#upupversiontitle_con5').val(),
            nangcaptrainghiem: $('#upnangcaptrainghiem').val(),
            sualoi: $('#upsualoi').val()
        };

        $.ajax({
            type: "POST",
            url: "/api/AdminUpdate/UpdateUpHead",
            data: JSON.stringify(formData),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (response) {
                if (response.statusCode === 200) {
                    alert('Change updated successfully!');
                    $('#updateupdateModal').modal('hide');
                    $('#updateupdateForm')[0].reset();
                    location.reload();
                } else {
                    alert('Update failed: ' + response.statusMessage);
                }
            },
            error: function (error) {
                console.error('AJAX error:', error);
                alert('Error changing update');
            }
        });
    }

    function Submit_Delete_Update() {
        var formData = {
            version_update: $('#delversion_update').val()
        };

        $.ajax({
            type: "POST",
            url: "/api/AdminUpdate/DeleteUpHead",
            data: JSON.stringify(formData),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (response) {
                if (response.statusCode === 200) {
                    alert("Delete update successful: " + response.statusMessage);
                    $('#deleteupdateModal').modal('hide');
                    $('#deleteupdateForm')[0].reset();
                    location.reload();
                } else {
                    alert("Delete update failed: " + response.statusMessage);
                }
            },
            error: function (error) {
                console.error("AJAX error response:", error);
                alert("Error during delete update.");
            }
        });
    }

