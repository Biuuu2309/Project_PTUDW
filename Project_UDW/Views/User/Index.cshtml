<script>
    function Add_Update() {
        var modal = new bootstrap.Modal(document.getElementById('addupdateModal'), {
            keyboard: false
        });
        modal.show();
    }

    function Delete_Update() {
        var modal = new bootstrap.Modal(document.getElementById('deleteupdateModal'), {
            keyboard: false
        });
        modal.show();
    }

    function Update_Update() {
        var modal = new bootstrap.Modal(document.getElementById('updateupdateModal'), {
            keyboard: false
        });
        modal.show();
    }

    function Submit_Add_Update() {
        var formData = {
            version_update: $('#addversion_update').val(),
            picheadblur: $('#addpicheadblur').val(),
            picheadmain: $('#addpicheadmain').val(),
            maintitle: $('#addmaintitle').val(),
            maindestitle: $('#addmaindestitle').val(),
            picupdate: $('#addpicupdate').val(),
            upversiontitle1: $('#addupversiontitle1').val(),
            upversiontitle_con1: $('#addupversiontitle_con1').val(),
            upversiontitle2: $('#addupversiontitle2').val(),
            upversiontitle_con2: $('#addupversiontitle_con2').val(),
            upversiontitle3: $('#addupversiontitle3').val(),
            upversiontitle_con3: $('#addupversiontitle_con3').val(),
            upversiontitle4: $('#addupversiontitle4').val(),
            upversiontitle_con4: $('#addupversiontitle_con4').val(),
            upversiontitle5: $('#addupversiontitle5').val(),
            upversiontitle_con5: $('#addupversiontitle_con5').val(),
            nangcaptrainghiem: $('#addnangcaptrainghiem').val(),
            sualoi: $('#addsualoi').val()
        };

        $.ajax({
            type: "POST",
            url: "/api/AdminUpdate/AddUpHead",
            data: JSON.stringify(formData),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (response) {
                if (response.statusCode === 200) {
                    alert("Add update successful: " + response.statusMessage);
                    $('#addupdateModal').modal('hide');
                    $('#addupdateForm')[0].reset();
                    location.reload();
                } else {
                    alert("Add update failed: " + response.statusMessage);
                }
            },
            error: function (error) {
                console.error("AJAX error response:", error);
                alert("Error during add update.");
            }
        });
    }

    function Submit_Update_Update() {
        var formData = {
            version_update: $('#upversion_update').val(),
            picheadblur: $('#uppicheadblur').val(),
            picheadmain: $('#uppicheadmain').val(),
            maintitle: $('#upmaintitle').val(),
            maindestitle: $('#upmaindestitle').val(),
