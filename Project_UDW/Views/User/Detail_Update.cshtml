</div>



<p id="displayId"></p>
<script>
    function getQueryParameterr(name) {
        var urlParamss = new URLSearchParams(window.location.search);
        return urlParamss.get(name);
    };
    function adjustHeight() {
        var img = document.getElementById('backgroundImagee');
        var textOverlay = document.getElementById('textOverlayy');
        textOverlay.style.height = img.clientHeight + 'px';
    };
    window.onresize = adjustHeight;
    function fetchUpdateDetails() {
        var version_update = getQueryParameterr("Usupdate");
        $.ajax({
            type: "GET",
            url: "/api/UserUpdate/GetUserUpdateDetail",
            data: { version_update: version_update },
            dataType: "json",
            success: function (update) {
                var container = $('#getuserupdatedetail');
                container.empty();
                var row =
                '<img id="backgroundImagee" src="/Pictures/Update/' + update.picheadblur + '" onload="adjustHeight()" />' +
                '<img id="backgroundImagee" src="/Pictures/Update/' + update.picheadmain + '" onload="adjustHeight()" />' +
                '<img id="backgroundImagee" src="/Pictures/Update/' + update.picupdate + '" onload="adjustHeight()" />' +
                '<h3>' + update.version_update + ' </h3>' +
                '<h1> ' + update.maintitle + ' </h1>' +
                '<p> ' + update.maindestitle + ' </p>' +
                '<p>Vai trò: ' + update.upversiontitle1 + ' </p>' +
                '<p>Vai trò: ' + update.upversiontitle_con1 + ' </p>' +
                '<p>Vai trò: ' + update.upversiontitle2 + ' </p>' +
                '<p>Vai trò: ' + update.upversiontitle_con2 + ' </p>' +
                '<p>Vai trò: ' + update.upversiontitle3 + ' </p>' +
                '<p>Vai trò: ' + update.upversiontitle_con3 + ' </p>' +
                '<p>Vai trò: ' + update.upversiontitle4 + ' </p>' +
                '<p>Vai trò: ' + update.upversiontitle_con4 + ' </p>' +
                '<p>Vai trò: ' + update.upversiontitle5 + ' </p>' +
                '<p>Vai trò: ' + update.upversiontitle_con5 + ' </p>' +
                '<p>Độ khó: ' + update.nangcaptrainghiem + ' </p>' +
                '<p>Độ khó: ' + update.sualoi + ' </p>' +
                '<p>Độ khó bìu: ' + update.champName + ' </p>' +
                '<p>Độ khó bìu: ' + update.noiTai + ' </p>' +
                '<p>Độ khó bìu: ' + update.skillQ + ' </p>' +
                '<p>Độ khó bìu: ' + update.skillW + ' </p>' +
                '<p>Độ khó bìu: ' + update.skillE + ' </p>' +
                '<p>Độ khó bìu: ' + update.skillR + ' </p>' +
                '<img id="backgroundImagee" src="/Pictures/Skills/Skills_NT/' + update.avA_NT + '" onload="adjustHeight()" />' +
                '<img id="backgroundImagee" src="/Pictures/Skills/Skills_Q/' + update.avA_Q + '" onload="adjustHeight()" />' +
                '<img id="backgroundImagee" src="/Pictures/Skills/Skills_W/' + update.avA_W + '" onload="adjustHeight()" />' +
                '<img id="backgroundImagee" src="/Pictures/Skills/Skills_E/' + update.avA_E + '" onload="adjustHeight()" />' +
                '<img id="backgroundImagee" src="/Pictures/Skills/Skills_R/' + update.avA_R + '" onload="adjustHeight()" />' +
                '<p>Độ khó bìu: ' + update.nameitem + ' </p>' +
                '<img id="backgroundImagee" src="/Pictures/Items/' + update.picitem + '" onload="adjustHeight()" />' +
                '<p>Độ khó bìu: ' + update.health + ' </p>' +
                '<p>Độ khó bìu: ' + update.atkdame + ' </p>' +
                '<p>Độ khó bìu: ' + update.apdame + ' </p>' +
                '<p>Độ khó bìu: ' + update.atkspeed + ' </p>' +
                '<p>Độ khó bìu: ' + update.crit + ' </p>' +
                '<p>Độ khó bìu: ' + update.armor + ' </p>' +
                '<p>Độ khó bìu: ' + update.magicresis + ' </p>';
                '<p>Độ khó bìu: ' + update.ahaste + ' </p>';
                '<p>Độ khó bìu: ' + update.movespeed + ' </p>';
                '<p>Độ khó bìu: ' + update.noitaiitem + ' </p>';
                '<p>Độ khó bìu: ' + update.cost + ' </p>';
                '<p>Độ khó bìu: ' + update.dame_nt + ' </p>';
                '<p>Độ khó bìu: ' + update.dame_q + ' </p>';
                '<p>Độ khó bìu: ' + update.dame_w + ' </p>';
                '<p>Độ khó bìu: ' + update.dame_e + ' </p>';
                '<p>Độ khó bìu: ' + update.dame_r + ' </p>';
                '<p>Độ khó bìu: ' + update.detail_NN + ' </p>';
                container.append(row);
            },
            error: function (error) {
                console.error("Error fetching data:", error);
            }
        });
    };

    $(document).ready(function () {
        fetchUpdateDetails();
        setInterval(fetchUpdateDetails, 30000);
    });
</script>
