@{
    ViewData["Title"] = "Detail News";
    Layout = null;
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/css/all.min.css" integrity="sha256-2XFplPlrFClt0bIdPgpz8H7ojnk10H69xRqd9+uTShA=" crossorigin="anonymous" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<style>
    body {
        padding: 0;
        margin: 0;
    }

    .container-fluid {
        position: relative;
        background-color: #161f33;
        display: flex;
        justify-content: center;
    }

    .text-overlayy {
        position: absolute;
        top: 0;
        width: 90%;
        color: white;
        display: flex;
        justify-content: start;
        align-items: center;
    }

    img {
        width: 90%;
        height: auto;
    }
</style>
<div class="container-fluid" id="getusernewsdetail">
</div>
<div class="container-fluid" id="getuserupdatedetail">
</div>
<div class="container-fluid" id="getuserchampiondetail">
</div>
<div class="container-fluid" id="getuserskilldetail">
</div>
<div class="container-fluid" id="getuserskindetail">
</div>

<p id="displayId"></p>
<script>
    function getQueryParameterr(name) {
        var urlParamss = new URLSearchParams(window.location.search);
        return urlParamss.get(name);
    };
    function adjustHeight() {
        var img = document.getElementById('backgroundImagee');
        var textOverlay = document.getElementById('textOverlayy');
        textOverlay.style.height = img.clientHeight + 'px';
    };
    window.onresize = adjustHeight;
    function fetchNewsDetails() {
        var namenews = getQueryParameterr("Usnews");
        $.ajax({
            type: "GET",
            url: "/api/UserNews/GetUserNewsDetail",
            data: { namenews: namenews },
            dataType: "json",
            success: function (news) {
                var container = $('#getusernewsdetail');
                container.empty();
                var row =
                    '<img id="backgroundImagee" src="/Pictures/News/' + news.picnewmain + '" onload="adjustHeight()" />' +
                    '<img id="backgroundImagee" src="/Pictures/News/' + news.picnewblur + '" onload="adjustHeight()" />' +
                    '<h3>' + news.maintitle + ' </h3>' +
                    '<h1> ' + news.destitle + ' </h1>' +
                    '<p> ' + news.mota + ' </p>' +
                    '<p> ' + news.title1 + ' </p>' +
                    '<p> ' + news.title1_con1 + ' </p>' +
                    '<p> ' + news.title1_con2 + ' </p>' +
                    '<p> ' + news.title2 + ' </p>' +
                    '<p> ' + news.title2_con1 + ' </p>' +
                    '<p> ' + news.title2_con2 + ' </p>' +
                    '<p> ' + news.title3 + ' </p>' +
                    '<p> ' + news.title3_con1 + ' </p>' +
                    '<p> ' + news.title3_con2 + ' </p>' +
                    '<p> ' + news.title4 + ' </p>' +
                    '<p> ' + news.title4_con1 + ' </p>' +
                    '<p> ' + news.title4_con2 + ' </p>' +
                    '<p> ' + news.title5 + ' </p>' +
                    '<p> ' + news.title5_con1 + ' </p>' +
                    '<p> ' + news.title5_con2 + ' </p>' +
                    '<p> ' + news.tomtat + ' </p>';
                container.append(row);
            },
            error: function (error) {
                console.error("Error fetching data:", error);
            }
        });
    };

    $(document).ready(function () {
        fetchNewsDetails();
        setInterval(fetchNewsDetails, 30000);
    });
</script>
