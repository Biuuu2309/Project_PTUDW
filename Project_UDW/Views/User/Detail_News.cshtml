@{
    ViewData["Title"] = "Detail News";
}
<link href="~/css/Detail_News.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/css/all.min.css" integrity="sha256-2XFplPlrFClt0bIdPgpz8H7ojnk10H69xRqd9+uTShA=" crossorigin="anonymous" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<style>
    body {
        padding: 0;
        margin: 0;
    }

    .text-overlayy {
        position: absolute;
        top: 0;
        width: 90%;
        color: white;
        display: flex;
        justify-content: start;
        align-items: center;
    }


    .DTT_PHANDAU::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        background-repeat: no-repeat;
        background-position: center;
        background-size: cover;
        filter: blur(3px);
        z-index: -1;
        background-image: var(--background-image);
    }
</style>

<div class="DTT">
    <div class="container DTT_BG w-100 p-0" id="getusernewsdetail">
    </div>
</div>

<p id="displayId"></p>
<script>
    function getQueryParameterr(name) {
        var urlParamss = new URLSearchParams(window.location.search);
        return urlParamss.get(name);
    }

    function fetchNewsDetails() {
        var namenews = getQueryParameterr("Usnews");
        $.ajax({
            type: "GET",
            url: "/api/UserNews/GetUserNewsDetail",
            data: { namenews: namenews },
            dataType: "json",
            success: function (news) {
                var container = $('#getusernewsdetail');
                container.empty();
                var row =
                    '<div class="DTT_PHANDAU">' +
                    '<div class="row">' +
                    '<div class="col-xxl-12 DTT_MAIN d-flex justify-content-center align-items-center">' +
                    '<img class="img-fluid" src = "../Pictures/News/' + news.picnewmain + '" alt = "Alternate Text"/>' +
                    '</div>' +
                    '</div>' +
                    '</div>' +
                    '<div class="DTT_PHANDAU_TIEUDE mt-3">' +
                    '<div class="row">' +
                    '<div class="col-xxl-12 DTT_PHANDAU_TIEUDE_COL">' +
                    '<p class="mb-3">' + news.maintitle + '</p>' +
                    '<span>' + news.destitle + '</span>' +
                    '</div>' +
                    '</div>' +
                    '</div>' +
                    '<div class="DTT_PHANTHAN_CONTAINER">' +
                    '<div class="DTT_PHANTHAN_TIEUDE mt-5">' +
                    '<div class="row">' +
                    '<div class="col-xxl-12">' +
                    '<p>' + news.title1 + '</p>' +
                    '</div>' +
                    '</div>' +
                    '</div>' +
                    '<div class="DTT_PHANDAU_MAIN_TEXT">' +
                    '<div class="row">' +
                    '<div class="col-xxl-12">' +
                    '<p>' + news.title1_con1 + '</p>' +
                    '<p>' + news.title1_con2 + '</p>' +
                    '</div>' +
                    '</div>' +
                    '</div>' +
                    '<div class="DTT_PHANTHAN_TIEUDE mt-5">' +
                    '<div class="row">' +
                    '<div class="col-xxl-12">' +
                    '<p>' + news.title2 + '</p>' +
                    '</div>' +
                    '</div>' +
                    '</div>' +
                    '<div class="DTT_PHANDAU_MAIN_TEXT">' +
                    '<div class="row">' +
                    '<div class="col-xxl-12">' +
                    '<p>' + news.title2_con1 + '</p>' +
                    '<p>' + news.title2_con2 + '</p>' +
                    '</div>' +
                    '</div>' +
                    '</div>' +
                    '<div class="DTT_PHANTHAN_TIEUDE mt-5">' +
                    '<div class="row">' +
                    '<div class="col-xxl-12">' +
                    '<p>' + news.title3 + '</p>' +
                    '</div>' +
                    '</div>' +
                    '</div>' +
                    '<div class="DTT_PHANDAU_MAIN_TEXT">' +
                    '<div class="row">' +
                    '<div class="col-xxl-12">' +
                    '<p>' + news.title3_con1 + '</p>' +
                    '<p>' + news.title3_con2 + '</p>' +
                    '</div>' +
                    '</div>' +
                    '</div>' +
                    '<div class="DTT_PHANTHAN_TIEUDE mt-5">' +
                    '<div class="row">' +
                    '<div class="col-xxl-12">' +
                    '<p>' + news.title4 + '</p>' +
                    '</div>' +
                    '</div>' +
                    '</div>' +
                    '<div class="DTT_PHANDAU_MAIN_TEXT">' +
                    '<div class="row">' +
                    '<div class="col-xxl-12">' +
                    '<p>' + news.title4_con1 + '</p>' +
                    '<p>' + news.title4_con2 + '</p>' +
                    '</div>' +
                    '</div>' +
                    '</div>' +
                    '<div class="DTT_PHANTHAN_TIEUDE mt-5">' +
                    '<div class="row">' +
                    '<div class="col-xxl-12">' +
                    '<p>' + news.title5 + '</p>' +
                    '</div>' +
                    '</div>' +
                    '</div>' +
                    '<div class="DTT_PHANDAU_MAIN_TEXT">' +
                    '<div class="row">' +
                    '<div class="col-xxl-12">' +
                    '<p>' + news.title5_con1 + '</p>' +
                    '<p>' + news.title5_con2 + '</p>' +
                    '</div>' +
                    '</div>' +
                    '</div>' +
                    '<div class="DTT_PHANTHAN_TIEUDE_2 mt-5">' +
                    '<div class="row">' +
                    '<div class="col-xxl-12">' +
                    '<p>Tóm tắt tổng thể</p>' +
                    '</div>' +
                    '</div>' +
                    '</div>' +
                    '<div class="DTT_PHANDAU_MAIN_TEXT_2">' +
                    '<div class="row">' +
                    '<div class="col-xxl-12">' +
                    '<p>' + news.tomtat + '</p>' +
                    '</div>' +
                    '</div>' +
                    '</div>' +
                    '</div>';

                container.append(row);

                // Set background image dynamically
                var phandau = document.querySelector('.DTT_PHANDAU');
                if (phandau) {
                    phandau.style.setProperty('--background-image', 'url(../Pictures/News/' + news.picnewmain + ')');
                }
            },
            error: function (error) {
                console.error("Error fetching data:", error);
            }
        });
    }

    $(document).ready(function () {
        fetchNewsDetails();
        setInterval(fetchNewsDetails, 30000);
    });
</script>
