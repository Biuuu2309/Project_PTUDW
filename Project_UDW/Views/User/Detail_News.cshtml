<script>
    function getQueryParameterr(name) {
        var urlParamss = new URLSearchParams(window.location.search);
        return urlParamss.get(name);
    };
    function adjustHeight() {
        var img = document.getElementById('backgroundImagee');
        var textOverlay = document.getElementById('textOverlayy');
        textOverlay.style.height = img.clientHeight + 'px';
    };
    window.onresize = adjustHeight;
    function fetchNewsDetails() {
        var namenews = getQueryParameterr("Usnews");
        $.ajax({
            type: "GET",
            url: "/api/UserNews/GetUserNewsDetail",
            data: { namenews: namenews },
            dataType: "json",
            success: function (news) {
                var container = $('#getusernewsdetail');
                container.empty();
                var row =
                    '<img id="backgroundImagee" src="/Pictures/News/' + news.picnewmain + '" onload="adjustHeight()" />' +
                    '<img id="backgroundImagee" src="/Pictures/News/' + news.picnewblur + '" onload="adjustHeight()" />' +
                    '<h3>' + news.maintitle + ' </h3>' +
                    '<h1> ' + news.destitle + ' </h1>' +
                    '<p> ' + news.mota + ' </p>' +
                    '<p> ' + news.title1 + ' </p>' +
                    '<p> ' + news.title1_con1 + ' </p>' +
                    '<p> ' + news.title1_con2 + ' </p>' +
                    '<p> ' + news.title2 + ' </p>' +
                    '<p> ' + news.title2_con1 + ' </p>' +
                    '<p> ' + news.title2_con2 + ' </p>' +
                    '<p> ' + news.title3 + ' </p>' +
                    '<p> ' + news.title3_con1 + ' </p>' +
                    '<p> ' + news.title3_con2 + ' </p>' +
                    '<p> ' + news.title4 + ' </p>' +
                    '<p> ' + news.title4_con1 + ' </p>' +
                    '<p> ' + news.title4_con2 + ' </p>' +
                    '<p> ' + news.title5 + ' </p>' +
                    '<p> ' + news.title5_con1 + ' </p>' +
                    '<p> ' + news.title5_con2 + ' </p>' +
                    '<p> ' + news.tomtat + ' </p>';
                container.append(row);
            },
            error: function (error) {
                console.error("Error fetching data:", error);
            }
        });
    };

    $(document).ready(function () {
        fetchNewsDetails();
        setInterval(fetchNewsDetails, 30000);
    });
</script>
