    ViewData["Title"] = "Update";
    Layout = null;
}
<link href="~/css/UpdateUs.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/css/all.min.css" integrity="sha256-2XFplPlrFClt0bIdPgpz8H7ojnk10H69xRqd9+uTShA=" crossorigin="anonymous" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLR0Ff3B4o1RjM3TV7pHIUydm4e4W3F4L8tFVCmwHZ" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<style>
    body {
        padding: 0;
        margin: 0;
    }

    .LO {
        background-color: #161f33;
        display: flex;
        justify-content: center;
        flex-wrap: nowrap;
    }
    .LOUH {
        width: 85%;
        background-color: #0a1429;
    }
    .LOUB {
        display: flex;
        justify-content: center;
        background-color: #ffffff;
        padding-top: 40px;
    }

    .LOUB_1 {

        width: 90%;
    }
</style>
<div class="container-fluid LO">
    <div class="row LOUH">
        <div class="col-xxl-4" style="display: flex; justify-content: center; align-items: center; height: 350px;">
            <h1 style="color: #ffffff;">CHI TIẾT CẬP NHẬT</h1>
        </div>
        <div class="col-xxl-8"></div>
        <div class="col LOUB">
            <div class="row" id="getlistupdate">
                
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $.ajax({
            type: "GET",
            url: "/api/UserUpdate/GetUserUpdate",
            dataType: "json",
            success: function (data) {
                console.log("Data fetched successfully:", data);
                var tbody = $('#getlistupdate');
                tbody.empty();
                data.forEach(function (update, index) {
                    var row =
                    '<div class="col-xxl-4 col-xl-4 col-lg-4 col-md-6 col-sm-6 col-12">' +
                    '<a href="/User/Detail_Update?Usupdate=' + update.version_update + '" id = "' + update.version_update + '">' +
                    '<div class="card">' +
                    '<img class="card-img-top TUONG_CARD_IMG" src = "/Pictures/Update/' + update.picheadmain + '" alt = "">' +
                    '<div class="card-body TUONG_CARD_BG_TEXT">' +
                    '<h4>' + update.maintitle + '</h4>' +
                    '<p class="card-text TUONG_CARD_TEXT" >' + update.maindestitle + '</p>' +
                    '</div>' +
                    '</div>' +
                    '</a>' +
                    '</div>';
                    tbody.append(row);
                });
            },
            error: function (error) {
                console.error("Error fetching data:", error);
            }
        });
    });
</script>
