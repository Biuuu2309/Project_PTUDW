<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLR0Ff3B4o1RjM3TV7pHIUydm4e4W3F4L8tFVCmwHZ" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/css/UpdateUs.css" rel="stylesheet" />

<div class="container-fluid LO">
    <div class="row LOUH">
        <div class="col-xxl-6 LG_COL">
            <h1 style="font-size: 65px;">CHI TIẾT <br /> CẬP NHẬT</h1>
        </div>
        <div class="col-xxl-6"></div>
        <div class="col LOUB" style="margin-bottom: 40px;">
            <div class="row" id="getlistupdate">
                
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $.ajax({
            type: "GET",
            url: "/api/UserUpdate/GetUserUpdate",
            dataType: "json",
            success: function (data) {
                console.log("Data fetched successfully:", data);
                var tbody = $('#getlistupdate');
                tbody.empty();
                data.forEach(function (update, index) {
                    var row =
                    '<div class="col-xxl-4 col-xl-4 col-lg-4 col-md-6 col-sm-6 col-12" style="padding-bottom: 20px;">' +
                    '<a href="/User/Detail_Update?Usupdate=' + update.version_update + '" id = "' + update.version_update + '">' +
                    '<div class="card h-100">' +
                    '<img class="card-img-top TUONG_CARD_IMG" src = "/Pictures/Update/' + update.picheadmain + '" alt = "">' +
                    '<div class="card-body UPDATE_CARD_BG_TEXT">' +
                    '<h4>' + update.maintitle + '</h4>' +
                    '<p class="card-text UPDATE_CARD_TEXT" >' + update.maindestitle + '</p>' +
                    '</div>' +
                    '</div>' +
                    '</a>' +
                    '</div>';
                    tbody.append(row);
                });
            },
            error: function (error) {
                console.error("Error fetching data:", error);
            }
        });
    });
</script>
