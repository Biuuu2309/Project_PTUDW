@{
    ViewData["Title"] = "Detail Champion";
    Layout = null;
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/css/all.min.css" integrity="sha256-2XFplPlrFClt0bIdPgpz8H7ojnk10H69xRqd9+uTShA=" crossorigin="anonymous" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLR0Ff3B4o1RjM3TV7pHIUydm4e4W3F4L8tFVCmwHZ" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<style>
    body{
        padding: 0;
        margin: 0;
    }

    .container-fluid {
        position: relative;
        background-color: #161f33;
        display: flex;
        justify-content: center;
    }

    .text-overlay {
        position: absolute;
        top: 0;
        width: 90%; /* Đảm bảo chiều rộng giống như ảnh */
        color: white; /* Tùy chọn màu chữ */
        display: flex;
        justify-content: start;
        align-items: center;
    }

    img {
        width: 90%;
        height: auto; /* Đảm bảo tỉ lệ ảnh đúng */
    }
</style>
<div class="container-fluid" id="getuserchampiondetail">
    
</div>
<div class="container-fluid" id="getuserskilldetail">
    
</div>
<div class="container-fluid" id="getuserskindetail">
    
</div>



<p id="displayId"></p>
<script>
    function getQueryParameter(name) {
        var urlParams = new URLSearchParams(window.location.search);
        return urlParams.get(name);
    };
    function adjustHeight() {
        var img = document.getElementById('backgroundImage');
        var textOverlay = document.getElementById('textOverlay');
        textOverlay.style.height = img.clientHeight + 'px';
    }
    window.onresize = adjustHeight;
    $(document).ready(function () {
        var champName = getQueryParameter("Uschamp");
        $.ajax({
            type: "GET",
            url: "/api/UserChampion/GetUserChampionDetail",
            data: { champName: champName },
            dataType: "json",
            success: function (champion) {
                var container = $('#getuserchampiondetail');
                container.empty();
                var row =
                    '<img id="backgroundImage" src="/Pictures/Backgrounds_Champs/' + champion.imageDD + '" onload="adjustHeight()" />' +
                    '<div id="textOverlay" class="text-overlay">' +
                    '<div>' +
                    '<h3>' + champion.nickName + ' </h3>' +
                    '<h1> ' + champion.champName + ' </h1>' +
                    '<p> ' + champion.describle + ' </p>' +
                    '<div style="display: flex;">' +
                    '<div>' +
                    '<p>Vai trò: ' + champion.role + ' </p>' +
                    '</div>' +
                    '<div>' +
                    '<p>Độ khó: ' + champion.level + ' </p>' +
                    '</div>' +
                    '</div>' +
                    '</div>' +
                    '</div>';
                container.append(row);
            },
            error: function (error) {
                console.error("Error fetching data:", error);
            }
        });
    });
    $(document).ready(function () {
        var champName = getQueryParameter("Uschamp");
        $.ajax({
            type: "GET",
            url: "/api/UserSkill/GetUserSkillDetail",
            data: { champName: champName },
            dataType: "json",
            success: function (skill) {
                var container = $('#getuserskilldetail');
                container.empty();
                var row =
                    '<div>' +
                    '<h1>Ky nang</h1>' +
                    '<div style = "display: flex;">' +
                    '<div>' +
                    '<img src = "/Pictures/Skills/Skills_NT/' + skill.avA_NT + '" />' +
                    '<p>' + skill.noiTai + '</p>' +
                    '</div>' +
                    '<div>' +
                    '<img src = "/Pictures/Skills/Skills_Q/' + skill.avA_Q + '" />' +
                    '<p>' + skill.skillQ + '</p>' +
                    '</div>' +
                    '<div>' +
                    '<img src = "/Pictures/Skills/Skills_W/' + skill.avA_W + '" />' +
                    '<p>' + skill.skillW + '</p>' +
                    '</div>' +
                    '<div>' +
                    '<img src = "/Pictures/Skills/Skills_E/' + skill.avA_E + '" />' +
                    '<p>' + skill.skillE + '</p>' +
                    '</div>' +
                    '<div>' +
                    '<img src = "/Pictures/Skills/Skills_R/' + skill.avA_R + '" />' +
                    '<p>' + skill.skillR + '</p>' +
                    '</div>' 
                    '</div>' +
                    '</div>';
                container.append(row);
            },
            error: function (error) {
                console.error("Error fetching data:", error);
            }
        });
    });
    $(document).ready(function () {
        var champName = getQueryParameter("Uschamp");
        $.ajax({
            type: "GET",
            url: "/api/UserSkin/GetUserSkinDetail",
            data: { champName: champName },
            dataType: "json",
            success: function (skin) {
                var container = $('#getuserskindetail');
                container.empty();
                var row = '<div>' +
                    '<h1>Tranh phuc hien co</h1>' +
                    '<div style="display: flex;" class="skinlist">' +
                    '<div style="display: flex; flex-direction: column;">';

                var skinProperties = ['skin1', 'skin2', 'skin3', 'skin4', 'skin5', 'skin6', 'skin7', 'skin8', 'skin9', 'skin10', 'skin11', 'skin12', 'skin13', 'skin14', 'skin15', 'skin16', 'skin17', 'skin18'];

                for (var i = 0; i < skinProperties.length; i++) {
                    var skinProperty = skinProperties[i];
                    if (skin[skinProperty]) {
                        row += '<img src="/Pictures/Skins/' + skin[skinProperty] + '"/>';
                    }
                }

                row += '</div></div></div>';
                container.append(row);
            },
            error: function (error) {
                console.error("Error fetching data:", error);
            }
        });
    });

</script>
